{
  "name": "@opus-orchestra/terminal",
  "version": "0.3.0",
  "description": "Terminal UI for Opus Orchestra - manage Claude Code agents from the command line",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "opus-orchestra": "./dist/bin/opus.js"
  },
  "scripts": {
    "prebuild": "node ../../scripts/generate-version.js src/generated/version.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/bin/opus.js",
    "dev": "tsx src/bin/opus.ts",
    "test": "npm run build && vitest run",
    "test:unit": "vitest run --exclude '**/cli.integration.test.ts' --exclude '**/workflows.e2e.test.ts'",
    "test:integration": "npm run build && vitest run cli.integration.test.ts workflows.e2e.test.ts",
    "test:watch": "vitest",
    "lint": "eslint src --ext ts,tsx",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@opus-orchestra/core": "*",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/react": "^18.3.0",
    "typescript": "^5.x",
    "vitest": "^4.0.0",
    "tsx": "^4.19.0",
    "ink-testing-library": "^4.0.0"
  }
}
